generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  articles    Article[]

  @@map("categories")
}

model Article {
  id          String                 @id @default(cuid())
  title       String
  slug        String                 @unique
  content     String
  excerpt     String?
  imageUrl    String?
  sourceUrl   String?
  author      String?
  categoryId  String
  tags        String[]
  publishedAt DateTime
  featured    Boolean                @default(false)
  views       Int                    @default(0)
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
  embedding   Unsupported("vector")?
  category    Category               @relation(fields: [categoryId], references: [id])

  @@index([slug])
  @@index([categoryId])
  @@index([publishedAt])
  @@map("articles")
}

model Resource {
  id          String                 @id @default(cuid())
  title       String
  description String?
  fileUrl     String
  fileName    String
  fileType    String
  fileSize    Int
  category    String
  tags        String[]
  publishedAt DateTime
  downloads   Int                    @default(0)
  featured    Boolean                @default(false)
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
  embedding   Unsupported("vector")?

  @@index([category])
  @@index([publishedAt])
  @@map("resources")
}

model Staff {
  id        String   @id @default(cuid())
  name      String
  position  String
  bio       String?
  imageUrl  String?
  email     String?
  phone     String?
  linkedin  String?
  twitter   String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
  @@map("staff")
}

model Event {
  id              String    @id @default(cuid())
  title           String
  description     String?
  location        String?
  startDate       DateTime
  endDate         DateTime?
  imageUrl        String?
  registrationUrl String?
  featured        Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  slug            String    @unique

  @@index([startDate])
  @@map("events")
}

model Program {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  fullContent String?
  features    String[]
  color       String?
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("programs")
}

model EconomicData {
  id        String   @id @default(cuid())
  indicator String
  value     Float
  date      DateTime
  source    String
  unit      String?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([indicator, date, source])
  @@index([indicator])
  @@index([date])
  @@map("economic_data")
}

model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String
  role      String
  content   String
  sources   Json?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([sessionId])
  @@index([createdAt])
  @@map("chat_messages")
}

model Newsletter {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String?
  active         Boolean   @default(true)
  subscribedAt   DateTime  @default(now())
  unsubscribedAt DateTime?

  @@index([email])
  @@map("newsletter_subscribers")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  read      Boolean  @default(false)
  replied   Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@map("contact_messages")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("user")
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")
}

model AnalyticsEvent {
  id          String   @id @default(cuid())
  eventType   String
  pageUrl     String
  referrer    String?
  source      String?
  userAgent   String?
  browser     String?
  os          String?
  device      String?
  country     String?
  city        String?
  ipHash      String?
  sessionId   String?
  metadata    Json?
  createdAt   DateTime @default(now())
  duration    Int?
  firstSource String?
  path        String?
  scrollDepth Int?
  visitorId   String?

  @@index([eventType])
  @@index([pageUrl])
  @@index([visitorId])
  @@index([createdAt])
  @@map("analytics_events")
}

model DailyStats {
  id        String   @id @default(cuid())
  date      DateTime @unique
  views     Int      @default(0)
  visitors  Int      @default(0)
  sessions  Int      @default(0)
  updatedAt DateTime @updatedAt

  @@index([date])
  @@map("daily_stats")
}
