# Environment Variables for EGP Ghana Website

# Database Configuration
# Use port 5433 when using Docker (docker-compose maps 5433:5432)
DATABASE_URL="postgresql://egp_user:egp_dev_password_2026@localhost:5433/egp_db"
DB_PASSWORD="egp_dev_password_2026"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# OpenAI API (for AI Chatbot)
OPENAI_API_KEY="your_openai_api_key_here"

# API Keys (Free APIs - no keys needed, but placeholders for future)
WORLD_BANK_API_URL="https://api.worldbank.org/v2"
IMF_API_URL="https://data.imf.org/api"
GHANA_API_URL="https://api.ghana-api.dev/v1"

# pgAdmin Configuration
PGADMIN_EMAIL="admin@egpghana.org"
PGADMIN_PASSWORD="admin123"

# Admin credentials (optional - used by seed and manage-admins script)
# ADMIN_EMAIL="admin@egpghana.org"
# ADMIN_PASSWORD="your_secure_password"

# Authentication (for admin panel - to be configured later)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here_change_in_production"

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_DIR="./public/uploads"

# Email Configuration (for newsletters - to be configured later)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@egpghana.org"

# Analytics (optional)
NEXT_PUBLIC_GA_ID=""
